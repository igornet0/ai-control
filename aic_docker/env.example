# AI Control System - Development Environment Variables

# Database Configuration
POSTGRES_DB=ai_control_dev
POSTGRES_USER=ai_control_user
POSTGRES_PASSWORD=ai_control_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=ai_control_user
RABBITMQ_PASSWORD=ai_control_password
RABBITMQ_VHOST=/

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1
BACKEND_RELOAD=true

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-for-development-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File Storage (local for development)
FILE_STORAGE_BACKEND=local
FILE_STORAGE_PATH=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Security
SECRET_KEY=your-super-secret-key-for-development-only
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# External Services (optional for development)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
SLACK_BOT_TOKEN=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
FLOWER_PORT=5555

# Development specific
DEBUG=true
ENVIRONMENT=development
