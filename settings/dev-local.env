# Локальные настройки для разработки (без Docker)
ENVIRONMENT=development

PROJECT_NAME="AI Control System"
STACK_NAME=ai-control-system

# SQLite для локальной разработки
POSTGRES__DB=sqlite:///./ai_control_dev.db
POSTGRES__USER=
POSTGRES__PASSWORD=
POSTGRES__HOST=
POSTGRES__PORT=

# Backend - Development settings
DEBUG=True
SECURITY__SECRET_KEY=dev-secret-key-change-in-production
SECURITY__REFRESH_SECRET_KEY=dev-refresh-secret-key-change-in-production
LOGGING__LEVEL=DEBUG

# Run settings - Development
RUN__HOST=0.0.0.0
RUN__PORT=8000
RUN__FRONTEND_HOST=0.0.0.0
RUN__FRONTEND_PORT=3000

# CORS - Development
BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,http://localhost:5173,http://127.0.0.1:5173"

# Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Development specific
DEBUG=true
ENVIRONMENT=development
