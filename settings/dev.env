# Domain
# Development environment settings
RUN__DOMAIN=localhost

# Environment: local, staging, production
ENVIRONMENT=development

PROJECT_NAME="AI Control System"
STACK_NAME=ai-control-system

# Postgres - Development settings
POSTGRES__DB=ai_control_dev
POSTGRES__USER=ai_control_user
POSTGRES__PASSWORD=ai_control_password
POSTGRES__HOST=postgres
POSTGRES__PORT=5432

# Backend - Development settings
DEBUG=True
SECURITY__SECRET_KEY=dev-secret-key-change-in-production
SECURITY__REFRESH_SECRET_KEY=dev-refresh-secret-key-change-in-production
LOGGING__LEVEL=DEBUG

# RabbitMQ - Development settings (local)
RABBITMQ__HOST=rabbitmq
RABBITMQ__PORT=5672
RABBITMQ__USER=ai_control_user
RABBITMQ__PASSWORD=ai_control_password

# Celery - Development settings
RUN__CELERY_BROKER_URL=amqp://ai_control_user:ai_control_password@rabbitmq:5672//
RUN__CELERY_RESULT_BACKEND=redis://redis:6379/0

# Run settings - Development
RUN__HOST=0.0.0.0
RUN__PORT=8000
RUN__FRONTEND_HOST=0.0.0.0
RUN__FRONTEND_PORT=3000

# CORS - Development
BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173"

# Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Emails - Development (optional)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=dev@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# File Storage (local for development)
FILE_STORAGE_BACKEND=local
FILE_STORAGE_PATH=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Development specific
DEBUG=true
ENVIRONMENT=development

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
FLOWER_PORT=5555
